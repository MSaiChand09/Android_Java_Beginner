<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Number App"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp"/>

    <Button
        android:id="@+id/Calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calculator"
        android:textColor="#2D0235"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/Tocheck_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Number"
        android:textColor="#2D0235"
        android:textSize="20sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Num1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter First number"
            android:inputType="number"/>


        <EditText
            android:id="@+id/Num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Second number"
            android:inputType="number"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#4E4141"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/ADD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#50E63F"
                android:text="ADD"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/SUB"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#D50C35"
                android:text="SUB"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:id="@+id/MUL"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#4779A0"
                android:text="MUL"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/DIV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DIV"
                android:textColor="#000000"
                android:textSize="20sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edittext3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Enter number to be checked" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="3">


            <Button
                android:id="@+id/Prime_btn"
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#F7DE07"
                android:text="Prime" />

            <Button
                android:id="@+id/Polyndrome_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#541CB9"
                android:text="Polyndrome" />

            <Button
                android:id="@+id/Armstrong_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FF9800"
                android:text="Armstrong" />

        </LinearLayout>
        <TextView
            android:id="@+id/result1"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>